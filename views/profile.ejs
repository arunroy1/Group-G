<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Your Profile</title>

  <!-- Google Font -->
  <link
    href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap"
    rel="stylesheet" />

  <!-- Custom Styles -->
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
  <div class="container">
    <!-- Header -->
    <header class="header-panel">
      <h1>Your Profile</h1>
      <nav class="nav-bar">
        <div class="nav-item"><a href="/">Home</a></div>
        <div class="nav-item"><a href="/recipes">Recipes</a></div>
        <div class="nav-item"><a href="/recipes/addrecipe">Add Recipe</a></div>
        <div class="nav-item"><a href="/profile">Profile</a></div>
      </nav>
    </header>

    <!-- Profile Header & Dropdown -->
    <div class="profile-header">
      <h2>Welcome, <%= user.username %>!</h2>
      <div class="dropdown">
        <button class="dropdown-toggle" onclick="toggleAccount()">
          Account Details ▼
        </button>
        <div id="accountMenu" class="dropdown-menu">
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Password:</strong> ••••••••</p>
        </div>
      </div>
    </div>

    <!-- Recipes & Logout -->
    <main class="content-box">
      <h3>Your Recipes</h3>
      <% if (recipes && recipes.length) { %>
        <ul>
          <% recipes.forEach(r => { %>
            <li>
              <a href="/recipes/<%= r._id %>"><%= r.title %></a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>You haven’t added any recipes yet.</p>
      <% } %>

      <div class="logout-container">
        <button class="logout-button" onclick="confirmLogout()">
          Log Out
        </button>
      </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
      &copy; 2025 Recipe Explorer
    </footer>
  </div>

  <script>
    function toggleAccount() {
      document.getElementById('accountMenu')
              .classList.toggle('show');
    }
    function confirmLogout() {
      if (confirm('Are you sure you want to log out?')) {
        window.location.href = '/logout';
      }
    }
  </script>
</body>
</html>
