<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Your Profile</title>
  <link
    href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap"
    rel="stylesheet"/>
  <link rel="stylesheet" href="/css/styles.css"/>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <header class="header-panel">
      <h1>Your Profile</h1>
      <nav class="nav-bar">
        <div class="nav-item"><a href="/">Home</a></div>
        <div class="nav-item"><a href="/recipes">Recipes</a></div>
        <div class="nav-item"><a href="/recipes/addrecipe">Add Recipe</a></div>
        <div class="nav-item"><a href="/profile">Profile</a></div>
        <div class="nav-item"><a href="/logout">Log Out</a></div>
      </nav>
    </header>

    <!-- Profile Header & Dropdown -->
    <div class="profile-header">
      <h2>Welcome, <%= user.username %>!</h2>
      <div class="dropdown">
        <button class="dropdown-toggle" onclick="toggleAccount()">
          Account Details ▼
        </button>
        <div id="accountMenu" class="dropdown-menu">
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Password:</strong> ••••••••</p>
          <button type="button" onclick="toggleChangePassword()">
            Change Password
          </button>
          <form
            id="changePasswordForm"
            action="/profile/password"
            method="POST"
            style="display:none; margin-top:1rem;"
          >
            <label>
              New Password:
              <input
                id="newPassword"
                type="password"
                name="newPassword"
                required
                placeholder="••••••••"
              />
            </label>
            <button type="button" onclick="toggleNewPassword()">
              Show/Hide
            </button>
            <button type="submit">Update</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Recipes & Delete Buttons -->
    <main class="content-box">
      <h3>Your Recipes</h3>
      <% if (recipes && recipes.length) { %>
        <ul>
          <% recipes.forEach(r => { %>
            <li style="margin-bottom:0.5rem;">
              <a href="/recipes/<%= r._id %>"><%= r.title %></a>
              <button
                class="delete-recipe logout-button"
                data-id="<%= r._id %>"
                style="margin-left:1rem;"
              >Delete</button>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>You haven’t added any recipes yet.</p>
      <% } %>
    </main>

    <footer class="footer">
      &copy; 2025 Recipe Explorer
    </footer>
  </div>

  <script>
    function toggleAccount() {
      document.getElementById('accountMenu')
              .classList.toggle('show');
    }
    function toggleChangePassword() {
      const form = document.getElementById('changePasswordForm');
      form.style.display =
        form.style.display === 'none' ? 'block' : 'none';
    }
    function toggleNewPassword() {
      const input = document.getElementById('newPassword');
      input.type = input.type === 'password' ? 'text' : 'password';
    }
    // Delete buttons on profile page
    document.querySelectorAll('.delete-recipe').forEach(btn => {
      btn.addEventListener('click', async () => {
        if (!confirm('Delete this recipe?')) return;
        const id = btn.dataset.id;
        try {
          const res = await fetch(`/recipes/${id}`, { method: 'DELETE' });
          if (!res.ok) throw new Error();
          window.location.reload();
        } catch (err) {
          alert('Could not delete recipe.');
        }
      });
    });
  </script>
</body>
</html>
